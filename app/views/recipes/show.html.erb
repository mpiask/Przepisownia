<h2 align="center"> Title: <%= @recipe.title %></h2>
<div class="well col-xs-4 col-xs-offset-4">
  <%= @recipe.title %>
  <% if @recipe.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:<%= @recipe.user.email%></li>
          <h4 class="center description"><strong>Description:</strong></h4>
          <%= simple_format(@recipe.description) %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= link_to "Edit this article", edit_recipe_path(@recipe), class: "btn btn-xs btn-primary" %>
  <%= link_to "Delete this", recipe_path(@recipe), method: :delete,
                                                   data: { confirm: "Are you sure?"},
                                                   class: "btn btn-xs btn-danger" %>
</div>
