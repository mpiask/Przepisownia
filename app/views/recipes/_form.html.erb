<div class="row">
  <div class="col-xs-12">
      <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of dish", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-6">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Write a recipe", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit class:"btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
      <div class="cols-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel the request and return to recipe listing", recipes_path %> ]
      </div>
  </div>
</div>
