<h2 align="center"> User: <%= @user.email %></h2>
<div class="well col-xs-4 col-xs-offset-4">
  <% @user.recipes.each do |rec| %>
    <%= link_to rec.title, recipe_path(rec) %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:<%= rec.user.email%></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
