<h2 align="center"> Category: <%= @category.name.capitalize %></h2>
<div class="well col-xs-4 col-xs-offset-4">
  <% @category.recipes.each do |rec| %>
    <ul class="listing">
      <div class="row center">
        <%= link_to rec.title.capitalize, recipe_path(rec) %>
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:<%= rec.user.email%></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
