<h1 align="center">Listing all categories</h1>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4"
        <li class="article-title">
          <%= link_to "#{category.name}", category_path(category) %>
        </li>
        <li><small> <%= pluralize(category.recipes.count, "recipe") %></small></li>
        <% if current_user.admin? %>
          <%= link_to "Edit this article", edit_category_path(@category), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this", category_path(@category), method: :delete,
                                                           data: { confirm: "Are you sure?"},
                                                           class: "btn btn-xs btn-danger" %>
                                                           <div class="btn-group">
        <% end %>
      </div>
    </div>
  </ul>
  <% end %>
